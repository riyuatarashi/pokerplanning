{
  "name": "pokerplanning",
  "version": "1.0.0",
  "description": "A simple Planning Poker application built with Node.js, Express and socket.io.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "echo 'Tests disabled for now.'",
    "build:frontend": "esbuild src/client/app.js --bundle --outfile=public/dist/app.js --format=iife --global-name=PlanningPoker --sourcemap",
    "watch:frontend": "esbuild src/client/app.js --bundle --outfile=public/dist/app.js --format=iife --global-name=PlanningPoker --sourcemap --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "esbuild": "^0.21.5",
    "eslint": "^9.38.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.4.0",
    "nodemon": "^3.0.1"
  }
}
